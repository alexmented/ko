<h1>Result of calculations</h1>

<% if @result != 'There is no data or the data is incorrect'%>
<table class="table table-striped">
  <thead>
  <th scope="col">#</th>
  <th scope="col">Value</th>
  </thead>
  <tbody>
  <% @result.each_with_index do |elem, index| %>
  <tr>
    <th scope="row"><%= index+1 %></th>
    <td><%= "#{elem}^2=#{elem*elem}" %></td>
  </tr>
  <% end %>
  </tbody>
</table>
<% else %>
<h2><%= @result %></h2>
<% end %>

<%= form_tag('/logic/input', :method => 'get') do %>
    <%= submit_tag('Назад', class: 'btn btn-primary') %>
<% end %>
